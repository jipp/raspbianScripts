installation:
touch /boot/ssh
remove "init=/usr/lib/raspi-config/init_resize.sh"
sed -i.orig s/\ init="\/usr\/lib\/raspi-config\/init_resize.sh"// /boot/cmdline.txt

configuration:
systemctl disable hciuart
patch -b /boot/config.txt config.txt.patch
patch -b /etc/rsyslog.conf rsyslog.conf.patch
touch /home/pi/.vimrc
chown pi:pi /home/pi/.vimrc
patch -b /home/pi/.vimrc vimrc.patch

enable/start:

backup:
