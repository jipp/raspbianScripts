rule "EveningLightLate-OFF"
when
	Time cron "0 0 1 * * ?"
then
	logInfo("light", "EveningLightLate-OFF")
	sendCommand(PMSw1_Corner_Dining_Room, OFF)
	sendCommand(PMSw1_Sofa_Living_Room, OFF)
	sendCommand(PMSw1_Corner_Living_Room, OFF)
end

rule "MorningLight-ON"
when
	Time cron "0 0 6 ? * MON,TUE,WED,THU,FRI"
then
	if (Daylight.state != ON) {
		logInfo("light", "MorningLight-ON")
		sendCommand(PMSw1_Corner_Dining_Room, ON)
	}
end

rule "MorningLight-OFF"
when
	Time cron "0 20 6 ? * MON,TUE,WED,THU,FRI" or
	Item Daylight received update ON
then
	logInfo("light", "MorningLight-OFF")
	sendCommand(PMSw1_Corner_Dining_Room, OFF)
end
