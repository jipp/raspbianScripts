	sendCommand(PMSw1_Sofa_Living_Room, ON)
end

rule "EveningLightEarly_1-OFF"
when
	Time cron "0 31 23 * * ?"
then
	logInfo("light", "EveningLightEarly_1-OFF")
	sendCommand(PMSw1_Corner_Living_Room, OFF)
end

