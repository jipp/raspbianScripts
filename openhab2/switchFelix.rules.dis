rule "SwitchFelix-1-short"
when
	Item SF_1short received update ON
then
	logInfo("switchFelix", "SwitchFelix-1-short")
	if (LCSw1_Felix.state == ON) {
		logInfo("Light", "OFF")
		sendCommand(LCSw1_Felix, OFF)
	} else if (LCSw1_Felix.state != ON) {
		logInfo("Light", "ON")
		sendCommand(LCSw1_Felix, ON)
	}
end

