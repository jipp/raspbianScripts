rule "RemoteControl-1-short"
when
	Item RC_1short received update ON
then
	logInfo("remoteControl", "RemoteControl-1-short")
	if (PMSw1_Corner_Dining_Room.state == ON) {
		logInfo("Light", "OFF")
		sendCommand(PMSw1_Corner_Dining_Room, OFF)
	} else if (PMSw1_Corner_Dining_Room.state != ON) {
		logInfo("Light", "ON")
		sendCommand(PMSw1_Corner_Dining_Room, ON)
	}
end

