installation:
sudo tar zxvf jdk-8u131-linux-arm32-vfp-hflt.tar.gz -C /opt
sudo update-alternatives --install /usr/bin/javac javac /opt/jdk1.8.0_131/bin/javac 1
sudo update-alternatives --install /usr/bin/java java /opt/jdk1.8.0_131/bin/java 1
sudo update-alternatives --config javac
sudo update-alternatives --config java
wget -qO - 'https://bintray.com/user/downloadSubjectPublicKey?username=openhab' | sudo apt-key add -
sudo apt-get install apt-transport-https
echo 'deb https://dl.bintray.com/openhab/apt-repo2 stable main' | sudo tee /etc/apt/sources.list.d/openhab2.list
sudo apt-get update
sudo apt-get install openhab2

configuration:
touch /etc/openhab2/services/basicui.cfg
patch -b /etc/openhab2/services/addons.cfg addons.cfg.patch
patch -b /etc/openhab2/services/runtime.cfg runtime.cfg.patch
patch -b /etc/openhab2/services/basicui.cfg basicui.cfg.patch
patch -b /etc/openhab2/services/mqtt.cfg mqtt.cfg.patch
cp *.items* /etc/openhab2/items/
cp *.persist* /etc/openhab2/persistence
cp *.rules* /etc/openhab2/rules
cp *.sitemap* /etc/openhab2/sitemaps
cp *.things* /etc/openhab2/things
cp *.map* /etc/openhab2/transform

enable/start:
sudo systemctl daemon-reload
sudo systemctl enable openhab2.service
sudo systemctl start openhab2.service
sudo systemctl status openhab2.service

backup:
/etc/openhab2/
