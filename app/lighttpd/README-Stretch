installation:
apt -y install lighttpd php php-cgi php-sqlite3 sqlite3
lighty-enable-mod cgi
lighty-enable-mod fastcgi
lighty-enable-mod fastcgi-php
service lighttpd force-reload

configuration:
touch /var/www/html/info.php
patch -b /var/www/html/info.php info.php.patch
mkdir -p /var/www/html/esp/update/bin
cp *.php /var/www/html/esp/update
chown -R www-data:www-data /var/www/html/esp

enable/start:

backup:
/etc/lighttpd
/var/www
