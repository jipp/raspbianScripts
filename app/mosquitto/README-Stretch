installation:
wget -qO - http://repo.mosquitto.org/debian/mosquitto-repo.gpg.key | apt-key add -
cd /etc/apt/sources.list.d/
wget http://repo.mosquitto.org/debian/mosquitto-stretch.list
apt update
apt -y install mosquitto mosquitto-clients

configuration:
touch /etc/mosquitto/passwd
patch -b /etc/mosquitto/passwd passwd.patch
touch /etc/mosquitto/conf.d/debug.conf
patch -b /etc/mosquitto/conf.d/debug.conf debug.conf.patch
touch /etc/mosquitto/conf.d/security.conf
patch -b /etc/mosquitto/conf.d/security.conf security.conf.patch

workaround:
wget http://security.debian.org/debian-security/pool/updates/main/o/openssl/libssl1.0.0_1.0.1t-1+deb8u6_armhf.deb
sudo dpkg -i libssl1.0.0_1.0.1t-1+deb8u6_armhf.deb
wget http://ftp.nz.debian.org/debian/pool/main/libw/libwebsockets/libwebsockets3_1.2.2-1_armhf.deb
sudo dpkg -i libwebsockets3_1.2.2-1_armhf.deb
sudo apt-get install mosquitto mosquitto-clients

enable/start:

backup:
/etc/mosquitto
