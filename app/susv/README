installation:
cd /tmp
wget http://seprotronic.com/susv/files/software/susvd-en-2.2-systemd-all.tar.gz
wget http://seprotronic.com/susv/files/firmware/susv_fw_231.tar.gz
tar zxvf susvd-en-2.2-systemd-all.tar.gz
tar zxvf susv_fw_231.tar.gz
apt-get -y install python-smbus
dpkg -i susvd-en-2.2-systemd-all.deb
chmod -x /etc/systemd/system/susvd.service

configuration:

enable/start:
cd /opt/susvd/
./susvd -start
hwclock -r
hwclock -w

backup:
/opt/susvd/susv.cfg
